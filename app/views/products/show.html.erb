<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @product.title %>
</p>

<p>
  <strong>Description:</strong>
  <%= @product.description %>
</p>

<p>
  <strong>Price:</strong>
  <%= @product.price %>
</p>

  <% if @product.image.attached? %>
    <div class="col-md-4">
      <p>
        <br>
        <div class="image">
          <%= image_tag @product.image %>
        </div>
      </p>
    </div>
  <% end %>

<%= link_to 'Edit', edit_product_path(@product) %> |
<%= link_to 'Back', products_path %>
